    "vdefines": [
        "[en_embedded?EN_RVE:]",
        "[en_csr?EN_RVZICSR:]",
        "[en_exceptions?EN_EXCEPT:]",
        "[en_compressed?EN_RVC:]",
        "NGPIO=[num_gpio_io]",
        "NSPI_CS=[num_spi_cs]"
    ],
    "vsrcs": [
        "${RVATOM}/rtl/soc/hydrogensoc/HydrogenSoC.v"
    ],
    "vincdirs": [
        "${RVATOM}/rtl/soc/hydrogensoc"
    ],
    "includes": [
        "atomrv_wb",
        "wbcomponents",
        "uart",
        "gpio",
        "spi",
        "timer",
        "mem"
    ]

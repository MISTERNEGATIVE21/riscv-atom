        "en_compressed": true,
        "en_csr": true,
        "en_exceptions": true,
        "num_gpio_io": 32, 
        "num_spi_cs": 1
    },
    "isa": "rv32[en_embedded?e:i][en_compressed?c:]_[en_csr?zicsr:]",
